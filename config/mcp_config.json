{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-server-config.json",
  "description": "AI Employee MCP Server Configuration",
  "version": "1.0.0",
  "servers": [
    {
      "name": "email",
      "description": "Gmail MCP Server for sending and drafting emails",
      "command": "python",
      "args": ["AI_Employee_Vault/mcp_servers/email_server.py", "AI_Employee_Vault"],
      "env": {
        "EMAIL_USER": "${GMAIL_USER}",
        "EMAIL_PASS": "${GMAIL_APP_PASSWORD}"
      },
      "capabilities": ["send_email", "draft_email", "list_drafts", "get_email_status"]
    },
    {
      "name": "email_node",
      "description": "Node.js Email MCP Server (JSON-RPC over stdin/stdout)",
      "command": "node",
      "args": ["AI_Employee_Vault/mcp_servers/email_mcp.js"],
      "env": {
        "EMAIL_USER": "${GMAIL_USER}",
        "EMAIL_PASS": "${GMAIL_APP_PASSWORD}",
        "VAULT_PATH": "AI_Employee_Vault"
      },
      "capabilities": ["send_email", "draft_email", "list_drafts"]
    },
    {
      "name": "social_media",
      "description": "Social Media MCP Server for Facebook, Instagram, Twitter",
      "command": "python",
      "args": ["AI_Employee_Vault/mcp_servers/social_media_server.py", "AI_Employee_Vault"],
      "env": {
        "FACEBOOK_ACCESS_TOKEN": "${FACEBOOK_ACCESS_TOKEN}",
        "FACEBOOK_PAGE_ID": "${FACEBOOK_PAGE_ID}",
        "INSTAGRAM_ACCESS_TOKEN": "${INSTAGRAM_ACCESS_TOKEN}",
        "INSTAGRAM_ACCOUNT_ID": "${INSTAGRAM_ACCOUNT_ID}",
        "TWITTER_API_KEY": "${TWITTER_API_KEY}",
        "TWITTER_API_SECRET": "${TWITTER_API_SECRET}",
        "TWITTER_ACCESS_TOKEN": "${TWITTER_ACCESS_TOKEN}",
        "TWITTER_ACCESS_SECRET": "${TWITTER_ACCESS_SECRET}"
      },
      "capabilities": ["post_to_social", "draft_social_post", "get_social_analytics", "generate_weekly_summary"]
    },
    {
      "name": "filesystem",
      "description": "Built-in filesystem access for vault operations",
      "command": "builtin",
      "capabilities": ["read", "write", "list", "move", "delete"],
      "root": "AI_Employee_Vault"
    },
    {
      "name": "browser",
      "description": "Browser automation for web interactions (LinkedIn, payments)",
      "command": "npx",
      "args": ["@anthropic/browser-mcp"],
      "env": {
        "HEADLESS": "true"
      },
      "capabilities": ["navigate", "click", "fill", "screenshot"]
    }
  ],
  "security": {
    "require_approval": [
      "send_email",
      "post_to_social",
      "any_payment"
    ],
    "auto_approve": [
      "draft_email",
      "draft_social_post",
      "list_drafts",
      "get_social_analytics",
      "read",
      "list"
    ],
    "never_auto_approve": [
      "delete",
      "any_financial_transaction"
    ]
  }
}
